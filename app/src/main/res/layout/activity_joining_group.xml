<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <!--文字部分-->
    <LinearLayout
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/joining_connection"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/connection_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="someone"
                android:textColor="@color/color_ffd129"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/joining_connection1"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="@string/joining_text_2"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <!--火箭部分-->
    <ImageView
    android:id="@+id/iv_rocket"
    android:layout_width="102dp"
    android:layout_height="227dp"
    android:layout_centerHorizontal="true"
    android:layout_above="@+id/text"
    android:layout_marginBottom="34dp"
    android:src="@mipmap/rocket"/>

    <!--背景图片部分-->

    <ImageView
        android:id="@+id/iv_rocker_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text"
        android:layout_marginBottom="12dp"
        android:src="@mipmap/join_background" />


</RelativeLayout>